{
  "productName": "Trading Terminal",
  "version": "0.1.0",
  "identifier": "com.trading.terminal",
  "build": {
    "beforeDevCommand": "pnpm --filter @app/web dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm --filter @app/web build",
    "frontendDist": "../web/build"
  },
  "app": {
    "windows": [
      {
        "title": "Trading Terminal",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
